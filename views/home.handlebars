<div>
    <div class="herobox1">
        <h1>The world's leading <br> Ecommerce Platform</h1>
        <p>Empowering Business, Connecting Worlds.</p>
        <a href="/html/learnmore.html" class="mybutton">Learn About Us</a>
    </div>

    <!-- Main Section -->
    <div class="cardheading">
        <h1>Explore Our Marketplace <br> Buy, Sell, and Discover</h1>
    </div>

    <div class="cards">
        {{#each cards}}
        <div class="{{class}}">
            <a href="{{link}}">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
            </a>
        </div>
        {{/each}}
    </div>

    <!-- Category Section -->
    <div class="cardheading">
        <h2>Top Categories</h2>
    </div>

    <div class="catcards">
        {{#each categories}}
        <div class="catcard">
            <a href="{{link}}">
                <h4>{{name}}</h4>
            </a>
        </div>
        {{/each}}
    </div>

    <!-- Product Stats Section-->
    <div class="Product-stats">
        <h2>Explore millions of offerings tailored to your business needs</h2>
        {{#each productStats}}
        <div class="sm-statcontainer">
            <h3>{{count}} <br> <br> {{label}}</h3>
        </div>
        {{/each}}
    </div>

    <!-- Testimonial Section -->
    <div class="testimonial-text-section">
        <h2>What Customers Say About Us</h2>
        <p>See what our satisfied customers have to say about their experiences. Real stories, real satisfaction.</p>

        <div class="slide-container">
            {{#each testimonials}}
            <div class="sliding-div {{#if current}}current{{/if}}">
                <p><span>{{name}}</span><br>⭐⭐⭐⭐⭐</p>
                <p>{{quote}}</p>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Ready To Start Section -->
    <div class="start">
        <h2>Ready To Start Buying/Selling?</h2>
        <p>Explore a world of possibilities and dive into buying and selling with confidence. <br> Start your journey
            today!</p>
        <a href="signup"><button>Get Started</button></a>
    </div>

    <!-- Footer Section -->
    <footer>
        <h4 id="footer-heading">FOLLOW US</h4>
        <div class="footer-social">
            <a href="#" target="_blank" class="fa fa-facebook"></a>
            <a href="#" target="_blank" class="fa fa-twitter"></a>
            <a href="#" target="_blank" class="fa fa-instagram"></a>
            <br>
            <br>
        </div>

        <div class="footer-bottom">
            All rights reserved - Copyright 2023©
        </div>
    </footer>
</div>
{{!-- </body> --}}
</div>